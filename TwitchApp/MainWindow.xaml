<Window x:Class="TwitchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="#FF4B367C" Offset="0.707"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="Search_Btn" Content="Search" HorizontalAlignment="Left" Margin="62,69,0,0" VerticalAlignment="Top" Width="120" Click="Search_Btn_Click"/>
        <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Height="23" Margin="62,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <!--<ListBox x:Name="xx" HorizontalAlignment="Left" Height="280" Margin="300,105,0,0" VerticalAlignment="Top" Width="220" ScrollViewer.CanContentScroll="False" >-->

        <!--</ListBox>-->
        <ScrollViewer x:Name="xx" HorizontalAlignment="Left" Height="364" Margin="250,41,0,0" VerticalAlignment="Top" Width="300" CanContentScroll="True">
        <ListBox x:Name="ChatBox"  Width="300"/>
        </ScrollViewer>
        <TextBlock HorizontalAlignment="Left" Margin="62,10,0,0" TextWrapping="Wrap" Text="Channel Search" VerticalAlignment="Top" Foreground="White" FontSize="16" Width="120"/>

    </Grid>
</Window>
